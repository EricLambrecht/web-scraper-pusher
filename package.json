{
  "name": "web-scraper-pusher",
  "version": "0.1.0",
  "description": "Node.JS server that scrapes web pages and sends the results to a Pusher channel",
  "engines": {
    "node": "14.x"
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "watch:ts": "tsc -w",
    "watch:node": "nodemon dist/index.js",
    "start:web": "node dist/index.js",
    "start:scraper": "node dist/main-task.js"
  },
  "dependencies": {
    "@types/pg": "^7.14.9",
    "express": "^4.15.2",
    "pg": "8.5.1",
    "puppeteer": "^7.0.0",
    "typescript": "^4.1.3",
    "pusher": "^4.0.2"
  },
  "devDependencies": {
    "@types/node": "14.14.22",
    "@types/puppeteer": "^5.4.2",
    "prettier": "2.2.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/EricLambrecht/web-scraper-pusher"
  },
  "keywords": [
    "node",
    "heroku",
    "express"
  ],
  "license": "MIT"
}
