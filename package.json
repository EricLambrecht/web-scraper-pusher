{
    "name": "web-scraper-pusher",
    "version": "0.1.0",
    "description": "Node.JS server that scrapes web pages and sends the results to a Pusher channel",
    "engines": {
        "node": "14.x"
    },
    "main": "dist/index.js",
    "type": "module",
    "scripts": {
        "build": "tsc",
        "watch:ts": "tsc -w",
        "watch:node": "nodemon dist/index.js",
        "start:web": "node dist/index.js",
        "start:scraper": "node dist/main-task.js"
    },
    "dependencies": {
        "express": "^4.15.2",
        "puppeteer": "^7.0.0",
        "typescript": "^4.1.3"
    },
    "devDependencies": {
        "@types/node": "14.14.22",
        "@types/puppeteer": "^5.4.2"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/EricLambrecht/web-scraper-pusher"
    },
    "keywords": [
        "node",
        "heroku",
        "express"
    ],
    "license": "MIT"
}
